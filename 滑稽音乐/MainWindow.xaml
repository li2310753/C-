<Window x:Class="滑稽音乐.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:滑稽音乐"
        mc:Ignorable="d"
        Title="MainWindow" Height="710" Width="1064" BorderThickness="20" Style="{StaticResource Window01}" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid x:Name="top" Background="#FFC62F2F" VerticalAlignment="Top" Height="50">
            <Button x:Name="Button_ShutDown" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" Style="{StaticResource Button01}" Background="{StaticResource 关闭按钮}" Click="Shutdown"/>
            <Button x:Name="Button_Maximize" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,45,0" Style="{StaticResource Button01}" Background="{StaticResource 最大化按钮}" Click="Maximize"/>
            <Button x:Name="Button_Minimize" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,75,0" Style="{StaticResource Button01}" Background="{StaticResource 最小化按钮}" Click="Minimize"/>

        </Grid>
    </Grid>
</Window>
